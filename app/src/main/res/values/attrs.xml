<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common attributes -->
    <attr name="animationDuration" format="integer" />

    <!-- Attributes for AnimatedPlaceholderEditText -->
    <declare-styleable name="AnimatedPlaceholderEditText">
        <attr name="placeholderText" format="string" />
        <attr name="placeholderColor" format="color" />
        <attr name="lineColor" format="color" />
        <attr name="lineHeight" format="dimension" />
        <attr name="animationDuration" />
    </declare-styleable>

    <!-- Attributes for HeyloButton -->
    <declare-styleable name="HeyloButton">
        <attr name="buttonStyle" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="text" value="2" />
        </attr>
        <attr name="cornerRadius" format="dimension" />
        <attr name="borderWidth" format="dimension" />
        <attr name="animationDuration" />
    </declare-styleable>
</resources>
